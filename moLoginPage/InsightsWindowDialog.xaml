<Window x:Class="BookStoreGUI.InsightsWindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreGUI"
        mc:Ignorable="d"
        Title="InsightsWindowDialog" Height="320" Width="650" Loaded="Window_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Left" MaxHeight="140" MaxWidth="600" Margin="50,22,0,0" VerticalAlignment="Top">
            <Label Content="Top Selling Books"/>
            <DataGrid  ItemsSource="{Binding}"
                        x:Name="PurchaseHistoryDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected"
		                HorizontalAlignment="Center" 
		                SelectionMode="Single" AutoGenerateColumns="True">
            </DataGrid>
        </StackPanel>
        
            
                    
        
    </Grid>
</Window>
