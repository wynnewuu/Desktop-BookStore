<Window x:Class="BookStoreGUI.PromocodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreGUI"
        mc:Ignorable="d"
        Title="Promotion code" Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="105"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" >Promotion code:</Label>
        <TextBox Name="codeTextBox" Grid.Column="1" Grid.Row="0" Margin="3,2,2,8"/>
        <Button Content="Apply" Name="applyButton" Click="applyButton_Click" IsDefault="True" Margin="107,0,116.6,10" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>

</Window>
